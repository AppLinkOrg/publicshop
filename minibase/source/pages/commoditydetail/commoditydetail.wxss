/* pages/commoditydetail/commoditydetail.wxss */
.zan-dialog__mask {
    display: none;
  }
  
  .zan-dialog__container {
    position: fixed;
    bottom: 200rpx;
    transform: translateY(300%);  /*弹框弹出距离，与弹框布局高度有关，如300%表示弹起距离为3倍弹窗高度 */
    transition: all 0.4s ease;
    z-index: 12;
  }
  .zan-dialog__container1 {
    position: fixed;
    bottom: 0;
    z-index: 12;
  }
  .zan-dialog--show .zan-dialog__container {
    transform: translateY(0);
  }
  
  .zan-dialog--show .zan-dialog__mask {
    display: block;
  }
  .zhezao{
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    background:rgba(0,0,0,0.4);
    overflow:hidden;
  }
  .zhezao1{
    position: fixed;
    width: 100%;
    height: 100%;
    bottom: 0;
    
    overflow:hidden;
  }
  .t_w{
    position: relative;
  }

  .wxParse-p .wxParse-img{
width: 100% !important;
  }
  .com-radius{
    border-radius: 20rpx 20rpx 0rpx 0rpx;
  }
  .com-border{
    border-top: 1px solid #CDCDCD;
    border-bottom: 1px solid #CDCDCD;
  }
  .scroll{
